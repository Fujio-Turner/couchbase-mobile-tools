<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>LogMergeTool</ToolCommandName>
    <Authors>Couchbase</Authors>
    <Company>Couchbase</Company>
    <Copyright>2019 Couchbase</Copyright>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/couchbaselabs/couchbase-mobile-tools</PackageProjectUrl>
    <RepositoryUrl>https://github.com/couchbaselabs/couchbase-mobile-tools</RepositoryUrl>
    <Description>A tool that will take logs generated by Couchbase Lite and convert them into a more readable format.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BinaryEncoding" Version="1.5.0" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="2.4.4" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Ini" Version="3.1.0" />
    <PackageReference Include="System.Linq.Async" Version="4.0.0" />
    <PackageReference Include="Utility.CommandLine.Progress" Version="0.0.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Couchbase.Lite.Binary.Log\Couchbase.Lite.Binary.Log.csproj" />
  </ItemGroup>

</Project>
